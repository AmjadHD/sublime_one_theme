{
	"contributions": {
		"settings": [
			{
				"file_patterns": ["/Preferences.sublime-settings"],
				"schema": {
					"properties": {
						"one_theme.view_overlay_scroll_bars": {
							"type": "boolean",
							"default": true,
							"markdownDescription": "Controls whether views' scrollbars should be overlayed regardless of the `overlay_scroll_bars` global setting."
						},
						"one_theme.show_vcs_status_badges": {
							"type": "boolean",
							"default": true,
							"markdownDescription": ""
						},
						"one_theme.show_panel_close_button": {
							"type": "boolean",
							"default": false,
							"markdownDescription": "Show / Hide panels' close button."
						}
					}
				}
			}
		]
	}
}